<h1>Your Order</h1>

 <table>
 	<tr>
 		<th>Customer</th>
 		<td><%= @order.user_id %></td>
 	</tr>
 	<tr>
 		<th>Status:</th>
 		<td><%= @order.status %></td>
 	</tr>
 	<tr>
 		<th>Items:</th>
 		<td><%= @order.order_items %></td>
 	</tr>
 	<tr>
 		<th>Items</th>
 		<th>Title</th>
 		<th>Quantity</th>
 		<th>Unit Price</th>
 		<th>Subtotal</th>
 	</tr>
 	<!-- more code will go here -->
 	<% @order.order_items.each do |item| %>
 	<tr>
 		<td></td>
 		<td><%= item.product.title %></td>
 		<td><%= link_to item.quantity, edit_order_path(item) %></td>
 		<td><%= item.product.price %></td>
 		<td><%= print_price item.subtotal %></td>
 	</tr>
 	<% end %>
 	<th><%= print_price @order.total %></th>
 </table>

